#!/bin/bash

set -x 

LOCK_IMAGE="$HOME/.lock.png"
PADLOCK="$HOME/.padlock.png"

maim "$LOCK_IMAGE"
RESOLUTION=$(identify -format '%wx%h' "$LOCK_IMAGE")
convert "$LOCK_IMAGE" \
    -resize "10%" -resize "1000%" \
    "$PADLOCK" \
    -gravity Center -compose Multiply \
    -composite "$LOCK_IMAGE"
i3lock -i $LOCK_IMAGE

